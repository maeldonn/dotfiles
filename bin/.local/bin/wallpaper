#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    wallpapers="$HOME/.dotfiles/wallpapers/"
    selected="$wallpapers$(ls $wallpapers | fzf)"
fi

if [[ -z $selected ]]; then
    exit 1
fi

if pgrep swaybg > /dev/null; then
    pkill swaybg
fi

swaybg -m fill -i $selected > /dev/null 2>&1 & disown
